{% extends "./nunjucks/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  {{ title(pageTitle) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p>This will remove access to licence information for <span class="govuk-!-font-weight-bold">{{ colleagueName }}</span>.</p>
      <p>They will not be notified about this change.</p>

      <form novalidate method="post" action="/manage_licences/access/remove" class="form">
        <input name="csrf_token" type="hidden" value="{{ csrfToken }}" />
        <input name="colleagueEntityID" type="hidden" value="{{ colleagueEntityID }}" />
        {{
          govukButton({ type: "submit", text: "Remove access" })
        }}
      </form>
    </div>
  </div>
{% endblock %}
