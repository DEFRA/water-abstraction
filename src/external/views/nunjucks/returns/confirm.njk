{% extends "./nunjucks/layout.njk" %}
{% from "nunjucks/returns/macros/return-header.njk" import returnHeader %}
{% from "nunjucks/returns/macros/confirm-page-inset-text.njk" import confirmPageInsetText %}
{% from "nunjucks/returns/macros/return-quantities-table.njk" import returnQuantitiesTable %}
{% from "nunjucks/returns/macros/return-declaration.njk" import returnDeclaration %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    {{ returnHeader(data, documentHeader, showMeta, isAdmin) }}

    <h2 class="govuk-heading-l">
      {{ "Nil return" if data.isNil else "Confirm your return" }}
    </h2>
    {{ confirmPageInsetText(data, endReading, isAdmin) }}
  </div>

  {% if not data.isNil %}
  {{ returnQuantitiesTable(data, lines, total, endReading, isAdmin) }}
  {% endif %}

  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if not data.isNil %}
      <p>
        <a href="{{ makeChangePath }}">Edit your
          {{ "meter readings" if data.reading.method else "volumes" }}
        </a>
      </p>
      {% endif %}

      {{ returnDeclaration(isAdmin) }}
      {{ formRender(form) }}
    </div>
  </div>
{% endblock %}
