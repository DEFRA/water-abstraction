{% macro messageLink(message) %}
  {% if message.isPdf %}
    {{ message.notificationType }}
    <span class="govuk-visually-hidden"> sent {{ message.data | date }} via {{ message.messageType }}</span>
  {% else %}
    <a href="{{ '/admin' if isInternal }}/licences/{{ documentId }}/communications/{{ message.notificationId }}">
      {{ message.notificationType }}
      <span class="govuk-visually-hidden"> sent {{ message.data | date }} via {{ message.messageType }}</span>
    </a>
  {% endif %}
{% endmacro %}

{% macro messageRow(message, isInternal) %}
<tr class="govuk-table__row">
  <td class="govuk-table__cell" scope="row">
    {{ messageLink(message) }}
  </td>
  <td class="govuk-table__cell">
    {{ message.date | date }}
  </td>
  {% if isInternal %}
  <td class="govuk-table__cell">
    {{ message.sender }}
  </td>
  {% endif %}
  <td class="govuk-table__cell">
    {{ message.messageType }}
  </td>
</tr>
{% endmacro %}


{% macro messageRowMobile(message, isInternal) %}
<div class="phone--show">
  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  <h3 class="govuk-heading-m govuk-!-margin-bottom-1">
    {{ messageLink(message) }}
  </h3>
  <p>{{ message.messageType | title }} sent {{ message.date | date }}

    {% if isInternal %}
    <br /><span class="govuk-caption-m link--no-underline">
      By {{ message.sender }}
    </span>
    {% endif %}
  </p>
</div>
{% endmacro %}

<h2 class="govuk-heading-m">Communications</h2>

{% if communications.length %}

  {% for message in communications %}
    {{ messageRowMobile(message, isInternal) }}
  {% endfor %}

  <table class="govuk-table phone--hide">
    <thead class="govuk-table__head">
      <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col">Type</th>
        <th class="govuk-table__header" scope="col">Sent</th>
        {% if isInternal  %}
        <th class="govuk-table__header" scope="col">Sender</th>
        {% endif %}
        <th class="govuk-table__header" scope="col">Method</th>
      </tr>
    </thead>
    <tbody class="govuk-table__body">
      {% for message in communications %}
        {{ messageRow(message, isInternal) }}
      {% endfor %}
    </tbody>
  </table>
{% else %}
  <p>No communications for this licence.</p>
{% endif %}
