{% extends "./nunjucks/layout.njk" %}
{% from "contact-details.njk" import contactDetails %}
{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ title(pageTitle) }}
      <p>We have sent you a link.</p>
      <details class="govuk-details" data-module="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">Still not received the email?</span>
        </summary>
        <div class="govuk-details__text">
          <p>Please contact us for help.</p>
          {{ contactDetails('enquiries@environment-agency.gov.uk') }}
        </div>
      </details>
    </div>
  </div>

{% endblock %}
