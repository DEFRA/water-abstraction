{% extends "./nunjucks/layout.njk" %}
{% from "inset-text/macro.njk" import govukInsetText %}
{% from "button/macro.njk" import govukButton %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ title(pageTitle) }}

      <p>
        You must be a licence holder to create an online account.
        Once registered you will be able to:
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li>view your abstraction licence information</li>
        <li>submit abstraction returns</li>
        <li>give others access to your account and permission to submit returns</li>
      </ul>

      <p>
        To protect your data we have to post a security code to the registered
        address of the licence.
      </p>

      {{
        govukInsetText({
          text: "This can take 2 to 3 working days."
        })
      }}

      <p>Impoundment licences are not yet part of this service.</p>

      <h2 class="govuk-heading-m">Before you start</h2>

      <p>You will need:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>an email address</li>
        <li>your licence numbers</li>
      </ul>

      {{
        govukButton({
          text: "Create account",
          href: "/register",
          classes: "govuk-button--start"
        })
      }}

    </div>
  </div>

{% endblock %}
