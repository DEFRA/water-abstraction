{% extends "./nunjucks/layout.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ title(pageTitle) }}
      <p data-test-id="success-text">
        We have sent a link to
        <span class="govuk-!-font-weight-bold">{{ email }}</span>
      </p>
      <p>
        <a class="govuk-link" href="/send-again" data-test-id="send-again-link">I have not received the email</a>
      </p>
    </div>
  </div>
{% endblock %}
