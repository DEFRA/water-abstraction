{% extends "template.njk" %}
{% from "phase-banner/macro.njk" import govukPhaseBanner %}
{% from "back-link/macro.njk" import govukBackLink %}

{% from "main-nav.njk" import mainNav %}
{% from "forms/index.njk" import formRender, formErrorSummary %}
{% from "title.njk" import title %}

{% block pageTitle %}{{ pageTitle }} - GOV.UK{% endblock %}

{% block head %}
    <meta name="format-detection" content="telephone=no">

  <!--[if !IE 8]><!-->
    <link href="/public/stylesheets/v2/application.css" rel="stylesheet" />
  <!--<![endif]-->

  {# For Internet Explorer 8, you need to compile specific stylesheet #}
  {# see https://github.com/alphagov/govuk-frontend/blob/master/docs/installation/supporting-internet-explorer-8.md #}
  <!--[if IE 8]>
    <link href="/govuk-frontend/all-ie8.css" rel="stylesheet" />
  <![endif]-->

  {# For older browsers to allow them to recognise HTML5 elements such as `<header>` #}
  <!--[if lt IE 9]>
    <script src="/html5-shiv/html5shiv.js"></script>
  <![endif]-->
{% endblock %}

{% block header %}
  {{ govukHeader({
    homepageUrl: "https://www.gov.uk",
    containerClasses: "govuk-width-container",
    serviceName: "Manage your water abstraction or impoundment licence",
    serviceUrl: "/",
    navigation: propositionLinks
  }) }}
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: "Cookies"
        },
        {
          href: "/privacy-policy",
          text: "Privacy"
        },
        {
          href: "/accessibility",
          text: "Accessibility"
        }
      ]
    }
  }) }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: "beta"
    },
    html: 'This is a new service â€“ your <a class="govuk-link" href="/feedback">feedback</a> will help us to improve it.'
  }) }}

  {% block mainNav %}

  {% if hasMultipleCompanies and companyName %}
  <div class="company-switcher">
    You are managing <b>{{ companyName }}</b>
    <a href="/select-company" class="company-switcher__link">
      Change <span class="govuk-visually-hidden">the company you manage</span>
    </a>
  </div>
  {% endif %}

  {{ mainNav(mainNavLinks) }}
  {% endblock %}

  {% if back %}

  {% set backLinkText %} {{ backText | default('Back') }} {% endset %}

  {{ govukBackLink({
    href: back,
    text: backLinkText
  }) }}

  {% endif %}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script nonce="{{ nonces.script }}" src="/public/javascripts/application-v2.all.min.js"></script>
  <script nonce="{{ nonces.script }}">window.GOVUKFrontend.initAll()</script>

  <!-- Google Analytics -->
  <script nonce="{{nonces.script}}">
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.nonce='{{nonces.script}}';a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics{%if tracking.debug %}_debug{% endif %}.js','ga');

  ga('create', '{{ tracking.propertyId }}', 'auto');
  ga('set', 'allowAdFeatures', false);

  ga('send', 'pageview', {
    {% if tracking.isLoggedIn %}
    'dimension2': '{{ tracking.newUser }}',
    {% endif %}
    {% if tracking.lastLogin %}
    'dimension3': '{{ tracking.lastLogin }}',
    {% endif %}
    'dimension1': '{{ tracking.userType }}',
    'anonymizeIp': true,
    'page': '{{ gaUrl }}',
    'title': '{{ gaPageTitle }}',
    'location': window.location.origin + '{{ gaUrl }}'
  });
  </script>
  <!-- End Google Analytics -->

{% endblock %}
