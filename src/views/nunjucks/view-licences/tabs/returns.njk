{% macro returnRow(return) %}
<tr class="govuk-table__row">
  <td class="govuk-table__cell" scope="row">
    {% if return.path %}
    <a href="{{ return.path }}">
      <span class="govuk-visually-hidden">{{ return.badge.text }} return</span>
      {{ return.return_requirement }}
      <span class="govuk-visually-hidden">due {{ return.due_date | date }}</span>
    </a>
    {% else %}
      {{ return.return_requirement }}
    {% endif %}
  </td>
  <td class="govuk-table__cell">
    {% for purpose in return.metadata.purposes %}
      {{ ', ' if not loop.first }}
      {{ purpose.tertiary.description }}
    {% endfor %}
  </td>
  <td class="govuk-table__cell">
    {{ return.due_date | date }}
  </td>
  <td class="govuk-table__cell">
    {{ badge(return.badge.text, return.badge.status) }}
  </td>
</tr>
{% endmacro %}

<h2 class="govuk-heading-m">Returns</h2>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header" scope="col">Return reference</th>
      <th class="govuk-table__header" scope="col">Purpose</th>
      <th class="govuk-table__header" scope="col">Due</th>
      <th class="govuk-table__header" scope="col">Status</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for return in returns %}
      {{ returnRow(return) }}
    {% endfor %}
  </tbody>
</table>


{% if hasMoreReturns %}
<a href="{{ '/admin' if isInternal }}/licences/{{ documentId }}/returns">View all returns</a>
{% endif %}
