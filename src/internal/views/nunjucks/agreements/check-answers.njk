{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "./nunjucks/layout.njk" %}
{% from "forms/index.njk" import formRender,
formErrorSummary %}
{% from "title.njk" import title %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ title(pageTitle, caption)}}

      {{ govukInsetText({
        text: 'Go to the charge information to check which elements this agreement applies to.'
      })}}

      {{ govukSummaryList(answers | checkAnswers) }}

      <p>
        This licence will be added to the supplementary bill run if a bill is due.
      </p>
      {{ formRender(form) }}
    </div>
  </div>
{% endblock %}
