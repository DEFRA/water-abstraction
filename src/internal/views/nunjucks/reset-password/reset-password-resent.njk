{% extends "./nunjucks/layout.njk" %}
{% from "details/macro.njk" import govukDetails %}
{% from "nunjucks/macros/contact-details.njk" import contactDetails %}

{% block mainNav %}
{% endblock %}

{% block content %}

  <div class="grid-row">
    <div class="column-two-thirds">

      {{ title(pageTitle) }}

      <p>We have sent you a new link and intructions to reset your password.</p>


      {% set contactHtml %}
        <p>Please contact us for help.</p>
        {{ contactDetails() }}
      {% endset %}

      {{ govukDetails({
        summaryText: 'Still have not received anything?',
        html: contactHtml
      })}}

  </div>
</div>

{% endblock %}
