{% extends "./nunjucks/layout.njk" %}
{% from "inset-text/macro.njk" import govukInsetText %}

{% block mainNav %}
{% endblock %}

{% block content %}

  {{ formErrorSummary(form) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% if linkExpired %}
      {{ govukInsetText({
        text: "This password reset link has expired. Please enter your email address below and we will send you a new one."
      }) }}
      {% endif %}

      {{ title(pageTitle) }}

      <p>Tell us the email address you used to register with this service and we will send you a reset link.</p>

  </div>
</div>

  {{ formRender(form)}}

{% endblock %}
