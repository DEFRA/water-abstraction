{% extends "./nunjucks/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "./nunjucks/billing/macros/totals.njk" import billRunTotal, invoicesTotal, creditNoteTotal %}

{% block content %}

  {% if error %}
  {# display error message here if confirm batch failed #}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds govuk-!-margin-bottom-3">
      {{ title(pageTitle, batch.billRunDate | date('D MMMM YYYY'), false, true) }}
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-half govuk-!-margin-bottom-6">
      {{ billRunTotal(batch.totals.netTotal) }}
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third govuk-!-margin-bottom-6">
      {{ invoicesTotal(batch.totals.invoiceCount, batch.totals.invoiceValue) }}
    </div>
    <div class="govuk-grid-column-one-third">
      {{ creditNoteTotal(batch.totals.creditNoteCount, batch.totals.creditLineValue) }}
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <section class="govuk-!-margin-bottom-6">
        <p class="govuk-body">You can send this bill run on the next page.</p>
        {{
          govukButton({
            text: "Confirm bill run",
            href: '/billing/batch/' + batch.id + '/confirm'
          })
        }}
        {{
          govukButton({
            text: "Cancel bill run",
            href: '/billing/batch/' + batch.id + '/cancel',
            classes: "govuk-button--secondary govuk-!-margin-left-1"
          })
        }}
      </section>
      <p class="govuk-body">
        <a href="/billing/batch/{{batch.id}}/transactions-csv">Download this bill run</a>
      </p>
    </div>
  </div>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full govuk-!-margin-top-6">
      <hr class="govuk-section-break section-break--heavy" />
    </div>
  </div>
  <div class="govuk-grid-row">

 
    <div class="govuk-grid-column-full govuk-!-margin-top-5">
      {% if invoices.length > 0 %}
        <table class="govuk-table">
          <thead class="govuk-table__head">
            <tr class="govuk-table__row">
              <th scope="col" class="govuk-table__header">Billing account</th>
              <th scope="col" class="govuk-table__header">Contact</th>
              <th scope="col" class="govuk-table__header">Licence</th>
              <th scope="col" class="govuk-table__header govuk-table__header--numeric">Total</th>
              <th scope="col" class="govuk-table__header govuk-table__header--numeric">Action</th>
            </tr>
          </thead>
          <tbody class="govuk-table__body">
            {% for invoice in invoices %}
              <tr class="govuk-table__row">
                <td class="govuk-table__cell">
                  <a class="govuk-link" href="/billing/batch/{{batch.id}}/invoice/{{invoice.id}}">{{ invoice.accountNumber }}</a>
                </th>
                <td class="govuk-table__cell">{{ invoice.name }}</td>
                <td class="govuk-table__cell">

                  <ul class="govuk-list govuk-!-margin-0">
                  {% for licence in invoice.licenceNumbers %}
                    <li class="govuk-!-margin-0">{{ licence }}</li>
                  {% endfor %}
                  </ul>
                </td>
                <td class="govuk-table__cell govuk-table__cell--numeric">
                  <span>{{ invoice.netTotal | charge}}</span>
                  {% if invoice.isCredit %}
                    <div>Credit note</div>
                  {% endif %}
                </td>
                <td class="govuk-table__cell govuk-table__cell--numeric">
                  <a class="govuk-link" href="/billing/batch/{{batch.id}}/delete-account/{{invoice.id}}">Remove</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      {% endif %}
    </div>
  </div>

{% endblock %}

